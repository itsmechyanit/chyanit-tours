header.header
  nav.nav.nav--tours
    a.nav__el(href='/') All tours
  .header__logo
    img(src='/img/logo.png' alt='Chyanit\'s Tours logo')
  nav.nav.nav--user
    if user
      a.nav__el.nav__el-logout(href='#') LOGOUT
      a.nav__el(href='/me')
        img(src=`/img/users/${user.photo}` alt='User photo' class='nav__user-img')
        span= user.name
    else
      a.nav__el(href="/login") Log in
      a.nav__el.nav__el--cta(href='/signup') Sign Up